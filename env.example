# ==============================================
# Django Settings
# ==============================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# 本番環境では必ずFalseに設定
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ==============================================
# Database Settings
# ==============================================
# 開発環境ではSQLiteを使用（デフォルト）
# 本番環境ではPostgreSQLを使用してください
DB_ENGINE=django.db.backends.postgresql
DB_NAME=my_ads_platform
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ==============================================
# Redis Settings
# ==============================================
REDIS_URL=redis://localhost:6379/0

# ==============================================
# CORS Settings
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3002,http://127.0.0.1:3002

# ==============================================
# JWT Settings
# ==============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# Meta (Facebook) API Settings
# ==============================================
# Meta Business Suiteで取得したAPIキーを設定
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token

# ==============================================
# Email Settings
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@adsplatform.com

# 開発環境ではコンソール出力に変更可能
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ==============================================
# Slack Integration (Optional)
# ==============================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==============================================
# Sentry Error Tracking (Optional)
# ==============================================
# 本番環境での使用を推奨
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# Feature Flags
# ==============================================
# 課金機能を有効化（本番環境では最初はFalseを推奨）
ENABLE_BILLING=False

# デモモードを有効にする場合はTrueに設定
DEMO_MODE=False

# ==============================================
# Stripe Payment Settings
# ==============================================
# Stripeダッシュボードから取得
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# 本番環境では本番キーに変更
# STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# ==============================================
# Frontend URL
# ==============================================
FRONTEND_URL=http://localhost:3000

# ==============================================
# Storage Settings (Optional)
# ==============================================
# AWS S3を使用する場合
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=ap-northeast-1

# ==============================================
# CDN Settings (Optional)
# ==============================================
# CloudFrontなどのCDNを使用する場合
CDN_DOMAIN=cdn.yourdomain.com

# ==============================================
# Monitoring & Analytics
# ==============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ==============================================
# Rate Limiting
# ==============================================
# 1分あたりのリクエスト数制限
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================
# Security Settings (Production)
# ==============================================
# 本番環境では必ず設定
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# ==============================================
# Celery Settings
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# Two-Factor Authentication
# ==============================================
# 2FA機能を有効にする場合
ENABLE_2FA=False

